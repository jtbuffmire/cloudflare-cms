{
	"name": "cloudflare-cms",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "wrangler dev",
		"build": "vite build",
		"build:admin": "vite build",
		"deploy": "npm run build && wrangler deploy",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --diagnostic-sources js,svelte --output verbose",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"build:worker": "vite build && tsc --noEmit",
		"dev:worker": "wrangler dev --no-bundle",
		"db:migrate": "node migrations/migrate.js",
		"db:migrate:prod": "node migrations/migrate.js production",
		"db:reset": "wrangler d1 execute cms-db --local --file=./migrations/sql/0000_initial.sql && wrangler d1 execute cms-db --file=./migrations/sql/0000_initial.sql",
		"db:reset:hard": "node scripts/setup.js",
		"test:token": "node scripts/generate-test-token.js"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250109.0",
		"@floating-ui/dom": "^1.6.12",
		"@sveltejs/adapter-cloudflare": "3.0.2",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "2.0.0",
		"@sveltejs/vite-plugin-svelte": "3.0.0",
		"@types/jsonwebtoken": "^9.0.7",
		"autoprefixer": "^10.4.20",
		"concurrently": "^9.1.2",
		"dotenv": "^16.4.7",
		"jsonwebtoken": "^9.0.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.49",
		"sass": "^1.83.0",
		"svelte": "^4.2.12",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.2",
		"vite": "5.0.0",
		"wrangler": "^3.99.0"
	},
	"dependencies": {
		"@skeletonlabs/skeleton": "^2.10.4",
		"@skeletonlabs/tw-plugin": "^0.4.0",
		"@tiptap/core": "^2.10.4",
		"@tiptap/pm": "^2.10.4",
		"@tiptap/starter-kit": "^2.10.4",
		"@tsndr/cloudflare-worker-jwt": "^3.1.3",
		"lottie-web": "^5.12.2",
		"marked": "^15.0.5",
		"xss": "^1.0.15"
	}
}
