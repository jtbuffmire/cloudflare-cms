{
	"name": "blog",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev --port 5175",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "npm run test:integration && npm run test:unit",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"deploy vercel": "vercel build --prod && vercel deploy --prebuilt --prod",
		"deploy": "bun run build && wrangler pages deploy"
	},
	"devDependencies": {
		"@iconify-json/ph": "^1.1.13",
		"@playwright/test": "^1.44.1",
		"@sveltejs/adapter-cloudflare": "latest",
		"@sveltejs/adapter-static": "^3.0.2",
		"@sveltejs/enhanced-img": "^0.3.0",
		"@sveltejs/kit": "^2.5.17",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/eslint": "^8.56.10",
		"eslint": "^9.5.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.40.0",
		"mdsvex": "^0.11.2",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.5",
		"sass": "^1.83.1",
		"svelte": "^4.2.18",
		"svelte-check": "latest",
		"svelte-preprocess": "^6.0.3",
		"typescript": "latest",
		"unplugin-icons": "^0.19.0",
		"vite": "^5.4.11",
		"vitest": "^1.6.0"
	},
	"type": "module",
	"dependencies": {
		"@fontsource-variable/space-grotesk": "^5.0.18",
		"@fontsource/space-mono": "^5.0.20",
		"embla-carousel-svelte": "^8.1.5",
		"iconify-icon": "^2.1.0",
		"lottie-web": "^5.12.2",
		"shiki": "^1.9.0",
		"wrangler": "^3.61.0"
	}
}
